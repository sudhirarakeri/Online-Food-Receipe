@{
}
<html>
    <head>
        <title>Modify Page</title>
    <link href="/css/StateWiseMenu.css" rel="stylesheet" />
    </head>
    <body>

        <div class="container-fluid" style="margin-top:20px;">
            <div class="row">
                <div class="col-md-2" >
                    <span id="actlink" style="background: #3498DB;border-radius: 4px 5px;padding: 10px;" >@Html.ActionLink("Back", "MainMenu",new{@id= TempData["sname"]})</span>
                </div>
            </div>
        </div>
        @{Html.BeginForm();}
        @foreach(OnlineFoodReceipe.Models.Menu prod in ViewBag.List)
        {
            <div class="row" style="margin-top:10px;">
                <div class="d-grid gap-2">
                  <button class="btn" id="btnmenu" type="button">
                      <table>
                          <tr>
                              <td>
                                  <span id="listname">@prod.RName </span>
                              </td>
                              <td>
                                  <span id="actlink" style="background: #3498DB;border-radius: 4px 5px;padding: 10px;" >@Html.ActionLink("Edit", "InfoEdit", new { @id = prod.RId })</span>
                              </td>
                              <td>
                                  <div class="row">
                                        <div class="col-md-4">
                                            <span id="actlink" style="background: #F73710;border-radius: 4px 5px;padding: 10px;" >@Html.ActionLink("Delete", "Delete", new { @id = prod.RId })</span>
                                        </div>
                                    </div>
                              </td>
                          </tr>
                      </table>
                      </button>
                </div>
            </div>
        }
    @{Html.EndForm();}

    </body>
</html>